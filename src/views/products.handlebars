<div class="main">
  <h1>Welcome {{session.sessionDataName}}, eres un {{session.sessionAuth}}!</h1>

  <a href="/logout" class="logOut">LogOut</a>

  <div class="shop">
    {{#each products}}
  <div class="containers">
        <p>Name: {{this.name}}</p>

        <p>Description: {{this.description}}</p>

        <p>Price: {{this.price}}</p>

        <button>Add To pouch</button>

        <a href="http://localhost:8080/productDetail/{{this._id}}">More Details</a>

      </div>
    {{/each}}
  </div>

  <div class="botonera">
    {{this.pagingCounter}}
    {{totalPages}}

    <hr />
    <hr />

    {{prevPage}}
    {{#if hasPrevPage}}
      <a href="http://localhost:8080/products/?page={{prevPage}}" class="previousPage">⬅️</a>
    {{/if}}
    {{page}}
    {{#if hasNextPage}}
      <a href="http://localhost:8080/products/?page={{nextPage}}" class="nextPage">➡️</a>
    {{/if}}
    {{nextPage}}
  </div>

</div>
